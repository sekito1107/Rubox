{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    /* JS Interop */
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "utils/*": [
        "src/utils/*"
      ],
      "controllers/*": [
        "src/controllers/*"
      ],
      "lsp/*": [
        "src/lsp/*"
      ],
      "analysis": [
        "src/analysis.ts"
      ],
      "analysis/*": [
        "src/analysis/*"
      ],
      "reference/*": [
        "src/reference/*"
      ],
      "runtime/*": [
        "src/runtime/*"
      ],
      "persistence/*": [
        "src/persistence/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "tests/**/*.ts",
    "tests/**/*.js",
    "vitest.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
