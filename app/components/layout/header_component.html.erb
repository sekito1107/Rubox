<header class="h-14 border-b border-slate-200 dark:border-white/5 bg-white dark:bg-[#0D1117] flex items-center justify-between px-4 shrink-0 transition-colors" data-controller="header">
  <div class="flex items-center gap-3">
    <div class="flex items-center gap-2">
      <%= inline_svg_tag "icons/ruby.svg", class: "w-6 h-6" %>
      <span class="text-lg font-logo font-bold text-slate-800 dark:text-gray-100 tracking-tight">
        RubPad
      </span>
      <span class="ml-1 text-[10px] font-medium text-slate-500" data-header-target="version">
        Running...
      </span>
    </div>
  </div>

  <div class="flex items-center gap-3">
    <button
      id="theme-toggle"
      class="p-2 text-slate-400 hover:text-slate-600 dark:hover:text-slate-200 hover:bg-slate-100 dark:hover:bg-white/5 rounded-md transition-colors"
      title="テーマ切り替え"
      data-controller="theme"
      data-action="click->theme#toggle"
    >
      <span class="dark:hidden">
        <%= inline_svg_tag "icons/moon.svg", class: "w-4 h-4" %>
      </span>
      <span class="hidden dark:inline">
        <%= inline_svg_tag "icons/sun.svg", class: "w-4 h-4" %>
      </span>
    </button>

    <div class="h-4 w-px bg-slate-200 dark:bg-white/10 mx-1"></div>

    <button
      class="inline-flex items-center gap-2 px-3 py-1.5 text-sm font-medium text-slate-600 dark:text-slate-300 hover:text-slate-900 dark:hover:text-white hover:bg-slate-100 dark:hover:bg-white/5 rounded-md transition-colors border border-transparent hover:border-slate-200 dark:hover:border-white/10"
      title="コードを保存"
      data-controller="download"
      data-action="click->download#download"
    >
      <%= inline_svg_tag "icons/download.svg", class: "w-4 h-4" %>
      <span>Download</span>
    </button>

    <div class="h-4 w-px bg-slate-200 dark:bg-white/10 mx-1"></div>

    <!-- Examples Dropdown -->
    <div class="relative" data-controller="examples">
      <button
        class="inline-flex items-center gap-2 px-3 py-1.5 text-sm font-medium text-slate-600 dark:text-slate-300 hover:text-slate-900 dark:hover:text-white hover:bg-slate-100 dark:hover:bg-white/5 rounded-md transition-colors border border-transparent hover:border-slate-200 dark:hover:border-white/10"
        data-action="click->examples#toggle"
        title="サンプルコード"
      >
        <%= inline_svg_tag "icons/code.svg", class: "w-4 h-4" %>
        <span>Examples</span>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3 h-3 text-slate-400">
          <path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5" />
        </svg>
      </button>

      <!-- Dropdown Menu -->
      <div
        class="absolute right-0 top-full mt-1 w-48 bg-white dark:bg-[#1C2128] rounded-md shadow-lg border border-slate-200 dark:border-white/10 py-1 hidden z-50 transform origin-top-right transition-all duration-100 ease-out"
        data-examples-target="menu"
      >
        <button class="w-full text-left px-4 py-2 text-sm text-slate-700 dark:text-slate-200 hover:bg-slate-100 dark:hover:bg-white/5" data-action="click->examples#load" data-key="hello">
          Hello World
        </button>
        <button class="w-full text-left px-4 py-2 text-sm text-slate-700 dark:text-slate-200 hover:bg-slate-100 dark:hover:bg-white/5" data-action="click->examples#load" data-key="fizzbuzz">
          FizzBuzz
        </button>
        <button class="w-full text-left px-4 py-2 text-sm text-slate-700 dark:text-slate-200 hover:bg-slate-100 dark:hover:bg-white/5" data-action="click->examples#load" data-key="fibonacci">
          Fibonacci
        </button>
        <button class="w-full text-left px-4 py-2 text-sm text-slate-700 dark:text-slate-200 hover:bg-slate-100 dark:hover:bg-white/5" data-action="click->examples#load" data-key="primes">
          Prime Numbers
        </button>
      </div>
    </div>

    <div class="h-4 w-px bg-slate-200 dark:bg-white/10 mx-1"></div>

    <button
      class="inline-flex items-center gap-2 px-3 py-1.5 text-sm font-medium text-slate-600 dark:text-slate-300 hover:text-slate-900 dark:hover:text-white hover:bg-slate-100 dark:hover:bg-white/5 rounded-md transition-colors border border-transparent hover:border-slate-200 dark:hover:border-white/10"
      data-controller="share"
      data-action="click->share#share"
    >
      <%= inline_svg_tag "icons/share.svg", class: "w-4 h-4" %>
      <span>Share</span>
    </button>

    <button
      class="inline-flex items-center gap-2 px-4 py-1.5 text-sm font-semibold text-white bg-red-600 hover:bg-red-700 dark:bg-red-600/90 dark:hover:bg-red-600 rounded-md transition-colors shadow-sm dark:shadow-red-900/20"
      data-action="click->editor--runner#run"
    >
      <%= inline_svg_tag "icons/play.svg", class: "w-3 h-3 fill-current" %>
      <span>Run</span>
    </button>
  </div>
</header>
