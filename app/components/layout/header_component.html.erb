<header class="h-14 border-b border-slate-200 dark:border-white/5 bg-white dark:bg-[#0D1117] flex items-center justify-between px-4 shrink-0 transition-colors">
  <div class="flex items-center gap-3">
    <div class="flex items-center gap-2">
      <%= inline_svg_tag "icons/ruby.svg", class: "w-6 h-6" %>
      <span class="text-lg font-bold text-slate-800 dark:text-gray-100 tracking-tight">
        RubPad
      </span>
      <span class="ml-1 text-[10px] font-medium text-slate-500">
        v1.0 (MVP)
      </span>
    </div>
  </div>

  <div class="flex items-center gap-3">
    <button
      id="theme-toggle"
      class="p-2 text-slate-400 hover:text-slate-600 dark:hover:text-slate-200 hover:bg-slate-100 dark:hover:bg-white/5 rounded-md transition-colors"
      title="テーマ切り替え"
      data-controller="theme"
      data-action="click->theme#toggle"
    >
      <span class="dark:hidden">
        <%= inline_svg_tag "icons/moon.svg", class: "w-4 h-4" %>
      </span>
      <span class="hidden dark:inline">
        <%= inline_svg_tag "icons/sun.svg", class: "w-4 h-4" %>
      </span>
    </button>

    <div class="h-4 w-px bg-slate-200 dark:bg-white/10 mx-1"></div>

    <button class="inline-flex items-center gap-2 px-3 py-1.5 text-sm font-medium text-slate-600 dark:text-slate-300 hover:text-slate-900 dark:hover:text-white hover:bg-slate-100 dark:hover:bg-white/5 rounded-md transition-colors border border-transparent hover:border-slate-200 dark:hover:border-white/10">
      <%= inline_svg_tag "icons/share.svg", class: "w-4 h-4" %>
      <span>Share</span>
    </button>

    <button
      class="inline-flex items-center gap-2 px-4 py-1.5 text-sm font-semibold text-white bg-red-600 hover:bg-red-700 dark:bg-red-600/90 dark:hover:bg-red-600 rounded-md transition-colors shadow-sm dark:shadow-red-900/20"
      data-action="click->editor--runner#run"
    >
      <%= inline_svg_tag "icons/play.svg", class: "w-3 h-3 fill-current" %>
      <span>Run</span>
    </button>
  </div>
</header>
