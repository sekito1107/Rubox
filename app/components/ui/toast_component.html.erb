<div
  data-controller="toast"
  data-action="show-toast@window->toast#show"
  class="fixed top-4 right-4 z-50 transition-all duration-300 transform translate-y-[-100%] opacity-0 pointer-events-none"
  data-toast-hidden-class="translate-y-[-100%] opacity-0 pointer-events-none"
  data-toast-visible-class="translate-y-0 opacity-100"
>
  <div 
    class="flex items-center gap-3 px-4 py-3 rounded-lg shadow-lg min-w-[300px] border border-slate-200 dark:border-white/10 bg-white dark:bg-[#161b22] text-slate-800 dark:text-slate-200"
    data-toast-target="container"
  >
    <%# アイコンエリア %>
    <div data-toast-target="icon">
      <%# Success Icon (Default) %>
      <svg data-type="success" class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
      </svg>
      <%# Error Icon %>
      <svg data-type="error" class="hidden w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
    </div>

    <%# メッセージエリア %>
    <div class="flex-1 text-sm font-medium" data-toast-target="message"></div>

    <%# 閉じるボタン %>
    <button data-action="click->toast#hide" class="text-slate-400 hover:text-slate-600 dark:hover:text-slate-200 transition-colors">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
  </div>
</div>
